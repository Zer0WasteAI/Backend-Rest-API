{
  "mcpServers": {
    "zerowaste-complete": {
      "command": "python",
      "args": ["mcp_server.py"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": "./src",
        "MCP_MODE": "complete"
      },
      "description": "Complete ZeroWasteAI backend context with all 58 endpoints"
    },
    "zerowaste-hybrid": {
      "command": "python", 
      "args": ["hybrid_mcp_server.py"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": "./src",
        "MCP_MODE": "hybrid"
      },
      "description": "Hybrid server: ZeroWasteAI context + generic Python analysis"
    },
    "python-universal": {
      "command": "python",
      "args": ["generic_mcp_server.py"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": "./src",
        "MCP_MODE": "universal"
      },
      "description": "Universal Python project analyzer for any codebase"
    },
    "zerowaste-api-only": {
      "command": "python",
      "args": ["mcp_server.py", "--mode", "api-only"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": "./src",
        "MCP_FOCUS": "api_endpoints"
      },
      "description": "Focus only on API endpoints and Swagger documentation"
    },
    "zerowaste-architecture": {
      "command": "python",
      "args": ["mcp_server.py", "--mode", "architecture"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": "./src", 
        "MCP_FOCUS": "clean_architecture"
      },
      "description": "Focus on Clean Architecture patterns and use cases"
    }
  },
  "defaultServer": "zerowaste-complete",
  "serverGroups": {
    "development": ["zerowaste-complete", "zerowaste-hybrid"],
    "production": ["zerowaste-api-only"],
    "learning": ["zerowaste-architecture", "python-universal"]
  }
} 